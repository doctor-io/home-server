DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/home_server
PG_MAX_CONNECTIONS=10
METRICS_CACHE_TTL_MS=2000
METRICS_PUBLISH_INTERVAL_MS=2000
SSE_HEARTBEAT_MS=8000
WEBSOCKET_ENABLED=true
AUTH_SESSION_SECRET=dev-session-secret-change-me
AUTH_SESSION_HOURS=168
AUTH_PRIMARY_USERNAME=admin
# Optional: set this to auto-seed principal user during `npm run db:init`
# AUTH_PRIMARY_PASSWORD=change-me-strong
AUTH_ALLOW_REGISTRATION=false
AUTH_COOKIE_SECURE=false
NEXT_PUBLIC_PRIMARY_USERNAME=admin
LOG_LEVEL=info
LOG_FILE_PATH=logs/home-server.log
LOG_TO_FILE=true
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_CLIENT_LOG_INGEST=true
STORE_TEMPLATE_URL=https://raw.githubusercontent.com/bigbeartechworld/big-bear-portainer/main/templates.json
STORE_CATALOG_TTL_MS=21600000  # 6 hours
STORE_STACKS_ROOT=/var/lib/home-server/stacks  # Stack files (compose + env)
STORE_APP_DATA_ROOT=/DATA/Apps  # App persistent data (volumes)
FILES_ROOT=/DATA  # Files app exposed root
FILES_ALLOW_HIDDEN=false  # Allow hidden files toggle in Files app
DOCKER_SOCKET_PATH=/var/run/docker.sock
